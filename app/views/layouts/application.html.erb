<!DOCTYPE html>
<html>
<head>
  <title>VagabondApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
</head>
<body>

  <nav class="navbar navbar-inverse" id="shitNav">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Vagabond</a>
      </div>
      
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
      
        
        <% if current_user  %>
           <li><a href="/profile">Profile</a></li>
        <% else %>
          <li> </li> 
        <% end  %>  
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cities <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/cities/san-francisco">San Francisco</a></li>
            <li><a href="/cities/london">London</a></li>
            <li><a href="/cities/gibraltar">Gibraltar</a></li>
          </ul>
        </li>
      </ul>





        <ul class="nav navbar-nav navbar-right" id="nav-links">
         <% if current_user %> 
           <ul> 
             <li style="color:white"> Hello, <%= current_user.first_name %></li> 
             <li><%= link_to "Log out", logout_path, method: "delete" %></li> 
           </ul> 
         <% else %> 
           <ul> 
             <li><%= link_to "Login", 'login' %></a></li> 
             <li><%= link_to "Signup", 'signup' %></a></li> 
           </ul> 
         <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
  </nav>
	<div class="container">
		<%= yield %>
	</div>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</body>
</html>
