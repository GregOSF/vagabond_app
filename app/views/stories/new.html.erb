<p>
<h1 id="newStoryTitle"> Create A New Post </h1>
</p>
<hr>
<div class="row">
	<div class="col-lg-3">
	</div>
	<div class="col-lg-6">
<%= form_for @story do |f| %>
	<% flash.each do |name, msg| %>
	      <%= content_tag :div, msg, class: name %>
	<% end %>


	<% if @story.errors.any? %>
	<h2><%= pluralize(@story.error.count, "error") %> prevented this post from saving: %></h2>
		<ul>
			<% @story.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>

		</ul>
	<% end %>
  
  <%= f.text_field :title, placeholder: "Title", class: 'form-control'  %><br>
  <%= f.text_area :body, placeholder: "Body", class: 'form-control'  %><br>
	


  <%= f.select :city_id, [["San Francisco", 2], ["London", 3], ["Gibraltar", 4], ["Test", 6]], id: "buttonz" %>
  <hr>
  <%= f.submit "Save Story", class: 'btn btn-success', id: "buttonz" %>
<% end %>
	</div>
	<div class="col-lg-3">
	</div>
	</div>
	</div>